@model IEnumerable<EComunidadeMVC.Models.EventoViewModel>
@{
    ViewBag.Title = "Eventos";
}

<h2>Eventos</h2>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

<p>
    @Html.ActionLink("Criar Novo Evento", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Data</th>
            <th>Local</th>
            <th>Situação</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evento in Model)
        {
            <tr>
                <td>@evento.TituloEvento</td>
                <td>@evento.DataEvento</td>
                <td>@evento.LocalEvento</td>
                <td>@evento.Situacao</td>
                <td>@Html.ActionLink("Detalhes", "Details", new { id = evento.IdEvento })</td>
            </tr>
        }
    </tbody>
</table>
